{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    { "src": "api/chat.ts", "use": "@vercel/node" },
    { "src": "api/webhook.ts", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/favicon.png", "dest": "/public/favicon.png" },
    { "src": "/og-image.png", "dest": "/public/og-image.png" },
    { "handle": "filesystem" },
    { "src": "/api/webhook", "dest": "/api/webhook" },
    { "src": "/(.*)", "dest": "/api/chat" }
  ]
}
